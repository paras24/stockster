<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>EE13J2</display-name>
  
  <context-param>
  	<param-name>org.apache.tiles.impl.BasicTilesContainer.DEFINITIONS_CONFIG</param-name>
  	<param-value>
  	/pages/tiles.xml,
  	/pages/user/tiles.xml,
  	/pages/team/tiles.xml,
  	/pages/joiningPipeline/tiles.xml,
  	/pages/project/tiles.xml,
  	/pages/reports/tiles.xml,
  	/pages/newOpportunities/tiles.xml
  	</param-value>
  </context-param>
  
  <listener>
	  <listener-class>
	  	com.impetus.ee.common.TeamPlannerContextListener		
	  </listener-class>
	</listener>
	<context-param>
  	<param-name>webAppRootKey</param-name> 
  	<param-value>teamplanner.root</param-value> 
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/classes/log4j-TeamPlanner.properties</param-value>
  </context-param>
  <listener>
	<listener-class>org.springframework.web.util.Log4jConfigListener
 </listener-class>
	</listener>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
		/WEB-INF/applicationContext.xml
		/WEB-INF/security-context.xml
	</param-value>
  </context-param>
  <listener>
  	<listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
  </listener>
  
  <filter>  
   <filter-name>springSecurityFilterChain</filter-name>  
   <filter-class>  
          org.springframework.web.filter.DelegatingFilterProxy  
         </filter-class>  
  </filter>  
  <filter-mapping>  
   <filter-name>springSecurityFilterChain</filter-name>  
   <url-pattern>/*</url-pattern>  
  </filter-mapping>  
  
	
	
	
   <filter>
	<filter-name>struts2</filter-name>
	<filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	<init-param>
	<param-name>actionPackages</param-name>
	<param-value>com.impetus.ee.actions</param-value>
  	</init-param>
  </filter>
 
  <filter-mapping>
	<filter-name>struts2</filter-name>
	<url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>
